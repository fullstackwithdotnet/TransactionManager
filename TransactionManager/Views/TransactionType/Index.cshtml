@model IEnumerable<TransactionManager.Models.TransactionTypeModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Transaction Types</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Commission)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Commission)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TransactionTypeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TransactionTypeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TransactionTypeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
